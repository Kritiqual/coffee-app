<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaoCaoFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ToolbarBaoCao"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2AF598"
        app:title="BÁO CÁO"
        app:titleTextColor="#FFFFFF">
    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/taobaocao"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ToolbarBaoCao"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#009EFD"
        android:drawableTop="@drawable/iconplus3"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Tạo báo cáo"
        android:textColor="#fff"
        android:textSize="21sp"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/taobaocao">

        <TextView
            android:id="@+id/baocaodoanhthu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:text="Báo cáo doanh thu"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.043" />

        <TextView
            android:id="@+id/baocaokhohang"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:text="Báo cáo kho hàng"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.278" />

        <TextView
            android:id="@+id/baocaotaichinh"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:text="Báo cáo tài chính"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.501" />

        <TextView
            android:id="@+id/baocaokhuyenmai"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:text="Báo cáo khuyến mại"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.724" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>